  <body>
    <div class="container">
      <h1 id="heading-h1">To-Do List</h1>
      <% const
      dayarray=["sunday","monday","tuesday","wednesday","thursday","friday","saturday"]
      %> <% const d = new Date();%> <%let day = d.getDay();%>
      <h2>Today is <%=dayarray[day]%>, have a nice day !</h2>

      <div class="task-list">
      
        <% if(locals.array){ %> <% array.forEach(element => {%>
    
        
        <p id="list-p">
    
            <input type="checkbox" class="abc" name="task1"  />
            <%=element %>
        </p>
       
        <%}); %> <%} else{%>
        <!-- <h1>Add your task below </h1> -->
        <%}%>
      </div>
      <div class="todo-form">
        <form action="/submit" method="post">
          <input
            type="text"
            name="task"
            id="task-id"
            placeholder="Add task"
            required
          />
          <input type="submit" value="+" id="submit-button" />
        </form>
      </div>
      <div class="delete-form">
        <form action="/delete" method="post">
          <input
            type="number"
            name="delete-task"
            id="del-id"
            placeholder="Remove task"
           
          />
          <input type="submit" value="-" id="delete-button" />
        </form>
      </div>
    </div>
    
